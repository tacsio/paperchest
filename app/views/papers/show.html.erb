<% if notice %>
  <div class="alert">
    <button type="button" class="close" data-dismiss="alert">&times</button>
    <%= notice %>
  </div>
<% end %>

<h2><%= @paper.title %></h2>

<h4>Abstract:</h4>
<p><%= @paper.abstract %></p>

<h4>Citation:</h4>
<p><%= @paper.citation %></p>

<div class="btn-group">
  <%= link_to 'Edit', edit_paper_path(@paper), class: 'btn btn-info' %>
  <%= link_to 'Destroy', @paper, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  %>
  <%= link_to 'Back', papers_path, class: 'btn' %>
</div>
<hr>

<% unless @paper.reviews.empty? %>
  <div class="reviews">
    <%= render template: 'reviews/index' %>
  </div>
  <hr>
<% end %>

